<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneToOneConversationActivity">

    <RelativeLayout
        android:id="@+id/rl_otoc_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_otoc_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_otoc_1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_otoc_back"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_otoc_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_grey_1"
                android:padding="4dp"
                android:src="@drawable/ic_baseline_person_48" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/iv_otoc_convoName"
            android:text="Conversation Name"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="4dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/cv_otoc_1"
            android:layout_toStartOf="@id/iv_otoc_voiceCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_semibold"/>

        <ImageView
            android:id="@+id/iv_otoc_videoCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_videocam_24" />

        <ImageView
            android:id="@+id/iv_otoc_voiceCall"
            android:layout_toStartOf="@id/iv_otoc_videoCall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_call_24" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/messageRecyclerView"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/rl_otoc_toolbar_layout"/>
</RelativeLayout>